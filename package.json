{
  "name": "pre-commit-hook-project",
  "version": "1.0.0",
  "main": "index.js",
  "description": "Production-ready pre-commit hook system with ESLint, Prettier, TypeScript, and custom validations",
  "scripts": {
    "test": "echo \"No tests configured\" && exit 0",
    "prepare": "husky",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "typecheck": "tsc --noEmit",
    "pre-commit": "lint-staged",
    "check:console": "node scripts/check-console-logs.js src/**/*.{js,ts}",
    "check:size": "node scripts/check-file-size.js assets/**/*"
  },
  "keywords": [
    "pre-commit",
    "hooks",
    "eslint",
    "prettier",
    "typescript",
    "git-hooks",
    "code-quality"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "chalk": "^4.1.2",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.2"
  }
}
